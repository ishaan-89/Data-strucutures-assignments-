#include<bits/stdc++.h>
using namespace std;\
void revarray(int* arr, int size){
    for(int i=0;i<size/2;i++){
        int temp = arr[i];

        arr[i]=arr[size-1-i];
        arr[size-1-i]=temp;

    }
}
int main(){
    int arr[]={7,6,5,4,3,2,1};
    int size = sizeof(arr)/sizeof(int);
    revarray(arr, size);
    for(int i=0;i<size;i++){
        cout<<arr[i]<<" ";

    }
}
