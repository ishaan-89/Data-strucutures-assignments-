#include<bits/stdc++.h>
using namespace std;
const int maxcols= 10;
void rowsum(int arr[][maxcols], int rows, int cols){
for(int i=0;i<rows;i++){
        int sum=0;

        for(int j=0;j<cols;j++){
                sum=sum+arr[i][j];


        }
        cout<<"sum of "<<i+1<<" row is : "<<sum;
        cout<<'\n';

    }
}
void colsum(int arr[][maxcols], int rows, int cols){
    for(int j=0;j<cols;j++){
            int sum=0;
            for(int i=0;i<rows;i++){
                sum=sum+arr[i][j];

            }
            cout<<"sum of "<<j+1<<" column is : "<<sum;
            cout<<'\n';

        }
}

int main(){
    int rows = 2;
    int cols = 2;
    int arr[maxcols][maxcols];

    for(int i=0;i<rows;i++){
        for(int j=0;j<cols;j++){
            cin>>arr[i][j];

        }
    }
    rowsum(arr, rows, cols);
    colsum(arr, rows, cols);
        return 0;
}
