#include<bits/stdc++.h>
using namespace std;
void result(string& s, int start, int end){
    int i = start;
    int j = end;

    
    char pivot = s[(start+end)/2];

    while(i<=j){
        while(s[i]<pivot) i++;
        while(s[j]>pivot) j--;
        if(i<=j){
            swap(s[i], s[j]);
            i++;
            j--;

        }
    }
    if (start<j) result(s, start, j);
    if (i<end) result(s, i, end);
    

}
int main(){
    string s = "fieufisfgw";
    result(s, 0, s.size()-1);
    cout<<"after sorting : "<<s<<endl;

}
